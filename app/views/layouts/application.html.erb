<!DOCTYPE html>
<html>
  <head>
    <title>SportWithUs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= yield %>
   <div class="tapbar">
    <ul class="tapbar-items">
      <% if user_signed_in? %>
      <li class="tapbar-item"><%= link_to  "Home", root_path %></li>
      <li class="tapbar-item"><%= link_to  "Cards", offers_path %></li>
      <li class="tapbar-item"><%= link_to  "Cards", offers_path %></li>
      <li class="tapbar-item"><%= link_to  "Profile", user_path(current_user) %></li>
      <% else %>
            <li class="tapbar-item"><%= link_to  "Home", new_user_session_path %></li>
            <li class="tapbar-item"><%= link_to  "Cards", new_user_session_path %></li>
            <li class="tapbar-item"><%= link_to  "Cards", new_user_session_path %></li>
            <li class="tapbar-item"><%= link_to  "Profile", new_user_session_path %></li>
      <% end %>

    </ul>
   </div>
  </body>
</html>
