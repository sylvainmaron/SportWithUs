
<div class="chatroom">
  <div class="chat-title">
    <h1><%= @chatroom.name %></h1>
      </div>
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <div class="all-messages <%= 'text-right' if message.user == current_user %>">
              <div class="message-container" id="message-<%= message.id %>">
                <%= message.content.strip %>
              </div>
              <div>
                <i class="author">
                  <span id="name"><%= message.user.nickname %></span>
                  <small><span id="date"><%= message.created_at.strftime("%b %e , %l:%M%p") %></small></span>
                </i>
              </div>
            </div>
          <% end %>
        </div>
  <div class="input-chatroom">
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
    <% end %>
  </div>
</div>

