<div class="cards-container">
  <div class="card">
    <div class="opac">
      <h2 class="play">Play</h2>
      <h2 class="pass">Pass</h2>
    </div>
    <% @offers.each do |offer| %>
      <img src="#" alt="" width="100%" height="80%">
      <h3> <%= link_to  offer.title, offer_path(offer) %> </h3>
      <%= offer.time %>
    <% end %>
  </div>
</div>