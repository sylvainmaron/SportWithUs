<div class="cards-container">
  <% @offers.each do |offer| %>
    <div class="card" data-offer-id="<%= offer.id %>" data-user-id="<%= current_user.id %>" style="background-image: url(https://images.pexels.com/photos/4789457/pexels-photo-4789457.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940); background-size: cover; background-position: center;">
      <div class="opac">
        <h2 class="play">Play</h2>
        <h2 class="pass">Pass</h2>
      </div>
      <div class="card-text">
        <h3> <%= offer.title %> </h3>
        <h3> <%= offer.play_time %> </h3>
        <h3> <%= rand(1..14) %>/<%= offer.min_players %> players </h3>
      </div>
    </div>
  <% end %>
</div>
